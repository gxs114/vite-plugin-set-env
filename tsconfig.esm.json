{
  "compilerOptions": {
    "module": "ESNext",
    "target": "es2018",
    "removeComments": true,
    "declarationMap": true,
    "declaration": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "outDir": "dist/esm",
    "resolveJsonModule": true,
    "lib": [
      "es2018",
      "dom"
    ]
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "vite"
  ]
}